{
  "name": "angular-tiptap-editor-project",
  "description": "Angular project containing the AngularTiptapEditor library and its interactive demo",
  "keywords": [
    "angular",
    "tiptap",
    "editor",
    "rich-text",
    "wysiwyg",
    "demo",
    "typescript",
    "i18n",
    "internationalization"
  ],
  "author": "FloGeez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FloGeez/angular-tiptap-editor.git"
  },
  "bugs": {
    "url": "https://github.com/FloGeez/angular-tiptap-editor/issues"
  },
  "homepage": "https://github.com/FloGeez/angular-tiptap-editor#readme",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:lib": "ng build angular-tiptap-editor && npm run copy-lib-assets",
    "watch:lib": "ng build angular-tiptap-editor --watch",
    "dev": "concurrently \"npm run watch:lib\" \"wait-on dist/angular-tiptap-editor && npm run start\"",
    "build:demo": "ng build --configuration production",
    "build:demo:gh-pages": "ng build --configuration production --base-href /angular-tiptap-editor/",
    "copy-lib-assets": "cp README.md dist/angular-tiptap-editor/ && cp LICENSE dist/angular-tiptap-editor/ && cp CHANGELOG.md dist/angular-tiptap-editor/",
    "lint": "ng lint",
    "format": "prettier --write .",
    "test:e2e": "npx playwright test"
  },
  "dependencies": {
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@fontsource/material-symbols-outlined": "^5.2.14",
    "@intevation/tiptap-extension-office-paste": "^0.1.2",
    "@tiptap/core": "^3.0.0",
    "@tiptap/extensions": "^3.0.0",
    "@tiptap/extension-color": "^3.0.0",
    "@tiptap/extension-highlight": "^3.0.0",
    "@tiptap/extension-link": "^3.0.0",
    "@tiptap/extension-subscript": "^3.0.0",
    "@tiptap/extension-superscript": "^3.0.0",
    "@tiptap/extension-table": "^3.0.0",
    "@tiptap/extension-task-item": "^3.0.0",
    "@tiptap/extension-task-list": "^3.0.0",
    "@tiptap/extension-text-align": "^3.0.0",
    "@tiptap/extension-text-style": "^3.0.0",
    "@tiptap/extension-underline": "^3.0.0",
    "@tiptap/pm": "^3.0.0",
    "@tiptap/starter-kit": "^3.0.0",
    "rxjs": "^7.8.1",
    "tippy.js": "^6.3.7",
    "tslib": "^2.5.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^20.0.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.10",
    "angular-eslint": "21.0.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "ng-packagr": "^20.0.0",
    "prettier": "^3.8.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "8.46.4",
    "wait-on": "^8.0.3"
  }
}
